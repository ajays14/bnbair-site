<% layout('/layouts/boilerplate')%>
        <div class="row">
            <h1 class="text-center">Edit your BnbAir</h1>
            <div class="col-6 offset-3">
                <form  class="validated-form" action="/bnbairs/<%=bnbair._id%>?_method=PUT" method="POST" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="bnbair[title]" value="<%=bnbair.title%>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="bnbair[location]" value="<%=bnbair.location%>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Image URL</label>
                        <input class="form-control" type="text" id="image" name="bnbair[image]" value="<%=bnbair.image%>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="bnbair[price]" value="<%=bnbair.price%>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <input class="form-control" type="text" id="description" name="bnbair[description]" value="<%=bnbair.description%>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-info">Submit</button>
                    </div>
                </form>
            </div>
            <div class="mb-3">
                <a href="/bnbairs/<%=bnbair._id%>">Cancel</a>
            </div>
        </div>