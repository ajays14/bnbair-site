<% layout('/layouts/boilerplate')%>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%=bnbair.image%>" alt="Placeholder Home" />
      <div class="card-body">
        <h5 class="card-title"><%= bnbair.title%></h5>
        <p class="card-text"><%=bnbair.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%=bnbair.location%></li>
        <li class="list-group-item text-muted"><b>Host:</b> <%=bnbair.author.username%></li>
        <li class="list-group-item">$<%=bnbair.price%> per night</li>
      </ul>
      <% if(currentUser && bnbair.author.equals(currentUser._id)) { %>
      <div class="card-body">
        <a
          class="card-link btn btn-primary"
          href="/bnbairs/<%=bnbair._id%>/edit"
          >Edit BnbAir</a
        >
        <form
          class="d-inline"
          action="/bnbairs/<%=bnbair._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-warning">Delete!</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
  <div class="col-6">
  <% if(currentUser){ %>
    <h2>Leave a Review!</h2>
    <form
      action="/bnbairs/<%=bnbair._id%>/reviews"
      class="mb-3 validated-form"
      method="POST"
      novalidate
    >
      <div class="mb-3">
        <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input
            class="form-range"
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
          />
        </div>
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="10"
          placeholder="Enter Review Text Here"
          required
        ></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %>
    <% for(let review of bnbair.reviews) {%>
    <div class="mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Rating: <%=review.rating%></h5>
          <h6 class="card-subtitle">By: <%=review.author.username%></h6>
          <p class="card-text"><i><%=review.body%></i></p>
          <% if (currentUser && review.author.equals(currentUser._id)) { %>
          <form action="/bnbairs/<%=bnbair._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-danger">Delete</button></form>
          <% } %>
        </div>
      </div>
    </div>
    <% }%>
  </div>
</div>
